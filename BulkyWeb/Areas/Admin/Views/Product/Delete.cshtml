@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 ">
        <form method="post" class="row">
            <input asp-for="Id" hidden />

            <div class="border p-3 ">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <div class="form-floating py-2 col-12">
                    <input type="text" asp-for=Title disabled class="form-control border-2 shadow" />
                    <label asp-for=Title class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea type="text" disabled asp-for=Description class="form-control border-2 shadow"></textarea>
                    <label asp-for=Description class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" asp-for=ISBN disabled class="form-control border-2 shadow" />
                    <label asp-for=ISBN class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" asp-for=Author disabled class="form-control border-2 shadow" />
                    <label asp-for=Author class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" asp-for=ListPrice disabled class="form-control border-2 shadow" />
                    <label asp-for=ListPrice class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" asp-for=Price disabled class="form-control border-2 shadow" />
                    <label asp-for=Price class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" asp-for=Price50 disabled class="form-control border-2 shadow" />
                    <label asp-for=Price50 class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" asp-for=Price100 disabled class="form-control border-2 shadow" />
                    <label asp-for=Price100 class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit"  class="btn btn-danget form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Back To List</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}